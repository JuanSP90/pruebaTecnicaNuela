{
  "dependencies": {
    "mongodb": "^6.5.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "install-front": "cd frontend && npm install",
    "start-front": "cd frontend && npm start",
    "install-back": "cd backend && npm install",
    "start-back": "cd backend && npm start",
    "install-all": "npm-run-all --parallel install-front install-back",
    "start-all": "npm-run-all --parallel start-front start-back",
    "start": "npm run install-all && npm run start-all"
  }
}